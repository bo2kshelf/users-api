datasource db {
  provider = "mysql"
  url      = env("PRISMA_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  sub       String  @id
  profile   Profile @relation(fields: [profileId], references: [id])
  profileId Int
}

model Profile {
  id          Int      @id @default(autoincrement())
  userName    String   @unique
  displayName String
  picture     String
  records     Record[]
  user        User?
}

model Record {
  id        Int      @id @default(autoincrement())
  bookId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  have      Boolean
  read      Boolean
  reading   Boolean
  profile   Profile? @relation(fields: [profileId], references: [id])
  profileId Int?
}
